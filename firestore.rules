rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Daily write usage (updated only by Cloud Function); app can read to show count
    match /usage/current {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Users collection - role per authenticated user (manager | user)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // Helper: daily write limit (1000) shared across manager and user
    function underDailyWriteLimit() {
      let u = get(/databases/$(database)/documents/usage/current);
      return !u.exists || u.data.count < 1000;
    }

    // Players collection
    match /players/{playerId} {
      allow read: if true;
      allow write: if request.auth != null && underDailyWriteLimit();
    }

    // Logos collection - for Tour Manager overlay (managed in Players tab)
    match /logos/{logoId} {
      allow read: if true;
      allow write: if request.auth != null && underDailyWriteLimit();
    }

    // Config collection - e.g. tour-manager (logo URLs, etc.)
    match /config/{configId} {
      allow read: if true;
      allow write: if request.auth != null && underDailyWriteLimit();
    }

    // Tournaments collection
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow write: if request.auth != null && underDailyWriteLimit();
    }

    // Current Match collection - for live match state persistence
    match /current_match/{matchId} {
      allow read: if true;
      allow write: if request.auth != null && underDailyWriteLimit();
    }

    // Matches collection - for tournament bracket matches
    match /matches/{matchId} {
      allow read: if true;
      allow write: if request.auth != null && underDailyWriteLimit();
    }
  }
}

